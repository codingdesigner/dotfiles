[alias]
  co = checkout
  st = status
  ci = commit
  b = branch
  commush = !git commit -a && git push
  cu = !git commit -a && git push
  df = !git diff --no-prefix && git diff --staged --no-prefix
  clear = reset --hard
  pull-recursive = !git pull && git submodule update --init
  stache = !echo "Waxing and twirling..." && echo && git stash $@
  tree = log --graph --decorate --pretty=oneline --abbrev-commit
  loll = log --graph --decorate --pretty=oneline --abbrev-commit
  lol = !git --no-pager loll
  lolal = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lola = !git --no-pager lolal
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  ui = auto
  sh = auto
[push]
  default = tracking
[user]
	name = Mae Wendell
	email = mae@thecodingdesigner.com

[mergetool]
	keepBackup = true
	prompt = false
[credential]
  helper = osxkeychain
[core]
	excludesfile = /Users/mason/.gitignore_global
  ignorecase = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = FileMerge
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[merge]
	tool = FileMerge
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
